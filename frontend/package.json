{
  "name": "@retro/frontend",
  "description": "The React frontend of Retro. Make retrospectives great again.",
  "author": {
    "name": "Yadullah Duman",
    "url": "https://yduman.github.io"
  },
  "bugs": {
    "url": "https://github.com/yduman/retro/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yduman/retro.git",
    "directory": "frontend/"
  },
  "license": "MIT",
  "version": "0.3.4",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "http-proxy-middleware": "^1.0.5",
    "lodash": "^4.17.19",
    "material-ui-dropzone": "^3.3.1",
    "nanoid": "^3.1.12",
    "qrcode": "^1.4.4",
    "react": "^16.13.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "socket.io-client": "^2.3.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/react": "^10.4.7",
    "@testing-library/user-event": "^12.1.0",
    "@types/jest": "^26.0.8",
    "@types/lodash": "^4.14.158",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.0.27",
    "@types/qrcode": "^1.3.5",
    "@types/react": "^16.9.44",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/socket.io-client": "^1.4.33",
    "@types/styled-components": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "env-cmd": "^10.1.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "~3.9.7"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "env-cmd -f .env.production.local yarn build",
    "deploy": "run-s -l -n build:prod deploy:frontend",
    "deploy:frontend": "cp -a build/. ../backend/public/",
    "test": "react-scripts test",
    "test:cov": "react-scripts test --env=jsdom --coverage --watchAll=false",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "eject": "react-scripts eject"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint",
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
