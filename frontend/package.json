{
  "name": "@retro/frontend",
  "description": "The React frontend of Retro. Make retrospectives great again.",
  "homepage": "https://github.com/yduman/retro",
  "author": {
    "name": "Yadullah Duman",
    "url": "https://yduman.github.io"
  },
  "bugs": {
    "url": "https://github.com/yduman/retro/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yduman/retro.git",
    "directory": "frontend/"
  },
  "license": "MIT",
  "version": "0.2.1",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "env-cmd -f .env.production.local yarn build",
    "deploy:frontend": "cp -a build/. ../backend/public/",
    "deploy": "run-s -l -n build:prod deploy:frontend",
    "test": "react-scripts test --env=jsdom",
    "test:cov": "react-scripts test --env=jsdom --coverage --watchAll=false",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "lint:cypress": "eslint \"cypress/**/*.js\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:cypress": "prettier --write \"cypress/**/*.{js}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,css,json}\"",
    "cypress:open": "cypress open",
    "test:e2e": "cypress run",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.1.1",
    "@material-ui/icons": "^4.2.0",
    "http-proxy-middleware": "^0.19.1",
    "lodash": "^4.17.11",
    "nanoid": "^2.0.3",
    "qrcode": "^1.3.3",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.4",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "recompose": "^0.30.0",
    "socket.io-client": "^2.2.0",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "cypress": "^3.3.1",
    "env-cmd": "^9.0.3",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.5.0",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  },
  "proxy": "http://localhost:3001",
  "lint-staged": {
    "linters": {
      "src/**/*.{js,jsx,css,json}": [
        "yarn lint",
        "yarn format",
        "git add ."
      ],
      "cypress/**/*.{js}": [
        "yarn lint:cypress",
        "yarn format:cypress",
        "git add ."
      ]
    },
    "ignore": [
      "node_modules",
      "build",
      "public"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:e2e"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
