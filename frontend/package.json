{
  "name": "@retro/frontend",
  "description": "The React frontend of Retro. Make retrospectives great again.",
  "author": {
    "name": "Yadullah Duman",
    "url": "https://yduman.github.io"
  },
  "bugs": {
    "url": "https://github.com/yduman/retro/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yduman/retro.git",
    "directory": "frontend/"
  },
  "license": "MIT",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "env-cmd -f .env.production.local yarn build",
    "deploy:frontend": "cp -a build/. ../backend/public/",
    "deploy": "run-s -l -n build:prod deploy:frontend",
    "test": "react-scripts test --env=jsdom",
    "test:cov": "react-scripts test --env=jsdom --coverage --watchAll=false",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "lint:cypress": "eslint \"cypress/**/*.js\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:cypress": "prettier --write \"cypress/**/*.{js}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,jsx,css,json}\"",
    "cy:open": "cypress open",
    "test:e2e": "cypress run",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@material-ui/core": "^4.4.3",
    "@material-ui/icons": "^4.4.3",
    "http-proxy-middleware": "^0.20.0",
    "lodash": "^4.17.15",
    "nanoid": "^2.1.1",
    "qrcode": "^1.4.2",
    "react": "^16.10.1",
    "react-beautiful-dnd": "^11.0.5",
    "react-dom": "^16.10.1",
    "react-router-dom": "^5.1.1",
    "react-scripts": "3.1.2",
    "recompose": "^0.30.0",
    "socket.io-client": "^2.3.0",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cypress": "^3.4.1",
    "env-cmd": "^10.0.1",
    "eslint": "^6.5.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  },
  "proxy": "http://localhost:3001",
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn lint",
      "yarn format",
      "git add ."
    ],
    "cypress/**/*.js": [
      "yarn lint:cypress",
      "yarn format:cypress",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
